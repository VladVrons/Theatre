@using PrL.Models
@model IEnumerable<PrL.Models.TicketViewModel>
@{
    ViewData["Title"] = "Tickets";
}

<h2>Index</h2>
 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Seat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        
        <th></th>
    </tr>
 
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Seat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
       
        <td>
            @Html.ActionLink("Book Ticket", "BookTicket", new { showid=item.showid, seat = item.Seat })
        </td>
        <td>
            @Html.ActionLink("Buy Ticket", "BuyTicket", new { showid=item.showid, seat = item.Seat })
        </td>
    </tr>
}
 
</table>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
